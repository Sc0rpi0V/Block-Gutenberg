{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "Gutenberg/related-posts",
	"version": "0.1.0",
	"title": "Mise en avant d'actualités ou d'article",
	"category": "Gutenberg-block",
	"description": "Mise en avant d'actualités sous forme de tuile.",
	"attributes": {
		"overtitle": {
			"type": "string",
			"default": ""
		},
		"overtitleLevel": {
			"type": "string",
			"default": "2"
		},
		"title": {
			"type": "string",
			"default": ""
		},
		"titleLevel": {
			"type": "string",
			"default": "3"
		},
		"headAlign": {
			"type": "string",
			"default": "center"
		},
		"postItems": {
			"type": "array",
			"default": []
		},
		"btnType" : {
			"type": "string",
			"default": "link"
		},
		"btnUrl": {
			"type": "string",
			"default": ""
		},
		"btnText": {
			"type": "string",
			"default": ""
		}, 
		"btnTarget" : {
			"type": "boolean",
			"default": false
		},
		"iconPos" : {
			"type": "string",
			"default": "none"
		},
		"footAlign": {
			"type": "string",
			"default": "center"
		}
	},
	"supports": {
		"html": false,
		"customClassName": false
	},
	"textdomain": "Gutenberg-back",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"render": "file:./render.php"
}